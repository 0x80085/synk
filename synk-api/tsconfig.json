{
  "compilerOptions": {
    "module": "ES6",
    "target": "es6",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "node_modules/",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es2015", "es6"
  ]
}
